pipeline {
    agent any

    environment {
        PATH = "/opt/homebrew/bin:$PATH"
    }

    stages {

        stage('Checkout Code From Git') {
            steps {
                echo 'üì¶ Checking out source code...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo '‚öôÔ∏è Installing Python dependencies from requirement.txt...'
                sh '''
                # Remove old virtual environment (if any)
                if [ -d "venv" ]; then
                    echo "Removing old virtual environment..."
                    rm -rf venv
                fi

                # Create new virtual environment
                python3 -m venv venv
                . venv/bin/activate

                # Upgrade pip and install dependencies
                pip install --upgrade pip
                pip install -r requirement.txt
                '''
            }
        }

        stage('Run All Tests') {
            steps {
                echo 'üöÄ Running all tests across folders...'
                sh '''
                . venv/bin/activate

                echo "‚ñ∂ 1. Running find_duplicate.py"
                python3 1_find_duplicate_list/find_duplicate.py || echo "‚ö†Ô∏è Skipped if script has no test output"

                echo "‚ñ∂ 2. Running Web Login Automation"
                export PATH=$PATH:/opt/homebrew/bin
                echo "Using chromedriver from: $(which chromedriver)"
                chromedriver --version || echo "‚ö†Ô∏è chromedriver not found"
                robot -d 2_web_login_automation/results 2_web_login_automation/login_test.robot

                echo "‚ñ∂ 3. Running API Testing"
                robot -d 3_api_testing/output 3_api_testing/tests/users/test_user_api.robot

                echo "‚ñ∂ 4. Running Simple Cipher"
                python3 6_simple_cipher/simple_cipher.py || echo "‚ö†Ô∏è Simple cipher executed (no test report)"
                '''
            }
        }

        stage('Publish Reports') {
            steps {
                echo 'üßæ Publishing Robot Framework reports...'
                publishHTML(target: [
                    reportDir: '3_api_testing/output',
                    reportFiles: 'report.html',
                    reportName: 'API Testing Report'
                ])
                publishHTML(target: [
                    reportDir: '2_web_login_automation/results',
                    reportFiles: 'report.html',
                    reportName: 'Web Login Report'
                ])
            }
        }
    }

    post {
        always {
            echo '‚úÖ Build Finished'
        }
    }
}
